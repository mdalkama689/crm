{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es2016",
    "paths": {
      "@shared/*": ["../shared/*"]
    },
    "module": "commonjs",
    "rootDir": "../",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },

  "include": ["src"]
}
