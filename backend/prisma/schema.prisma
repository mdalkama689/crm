generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum EmployeeRange {
   RANGE_1_10
  RANGE_10_50
  RANGE_50_100
  RANGE_100_PLUS
}

enum Roles {
  owner
  client
  employee
}

model User {
  id            String         @id @default(uuid())
  fullname      String
  email         String         @unique
  password      String
  isVerified    Boolean @default(false)
  role          Roles          @default(employee)
  companyName   String?
  employeeRange EmployeeRange?
  businessType  String?
  address       String?
  isNewsLetterSubscribe Boolean? @default(false)
  forgotPasswordOtp Int?
  forgotPasswordExpiry DateTime?
}



